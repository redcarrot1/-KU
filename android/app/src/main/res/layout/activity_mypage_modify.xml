<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/baseline_account_circle_24" />

        <TextView
            android:id="@+id/change_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="프로필 사진 변경" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/modify_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="닉네임"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="봉사 시간"
                android:textAlignment="textStart"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addVolunteerTime2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="봉사 시간 추가하기"
                android:textAlignment="textEnd"
                android:textSize="18dp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="대학"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/department_spinner"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/spinner_theme"
            android:dropDownHeight="10dp"
            android:dropDownVerticalOffset="25dp"
            android:dropDownSelector="@color/green_main"
            android:overlapAnchor="false"
            android:popupBackground="@drawable/background_dropdown_spinner"
            android:spinnerMode="dropdown"
            android:textAlignment="textStart"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/major"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="20dp"
            android:text="학과"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/major_db_spinner"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/spinner_theme"
            android:dropDownVerticalOffset="25dp"
            android:overlapAnchor="false"
            android:popupBackground="@drawable/background_dropdown_spinner"
            android:spinnerMode="dropdown"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="@id/major_dp_tv"
            app:layout_constraintTop_toBottomOf="@id/major_dp_tv" />


        <TextView
            android:id="@+id/introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            android:text="자기 소개"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edit_text"
            android:text="사회봉사 같이 재미있게 채워요" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/end_edit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:enabled="true"
            android:text="수정 완료하기"
            android:textColor="#FFFFFF" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>